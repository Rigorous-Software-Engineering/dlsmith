type digit(i32, i32)
type sum_2(i32, i32, i32)

rel digit = {
  0.01::(0, 0),
  0.01::(0, 1),
  0.96::(0, 2),
  0.01::(0, 3),
  0.01::(0, 4)
}

rel digit = {
  0.01::(1, 0),
  0.01::(1, 1),
  0.01::(1, 2),
  0.01::(1, 3),
  0.96::(1, 4)
}

rel sum_2(a, b, x + y) = digit(a, x), digit(b, y), a == 0, b == 1
