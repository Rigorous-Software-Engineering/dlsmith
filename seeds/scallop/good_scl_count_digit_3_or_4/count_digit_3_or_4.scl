type digit(i32, i32)
type how_many(usize)


rel digit = {0.01::(0, 0); 0.01::(0, 1); 0.01::(0, 2); 0.01::(0, 3); 0.95::(0, 4)}
rel digit = {0.01::(1, 0); 0.01::(1, 1); 0.01::(1, 2); 0.95::(1, 3); 0.01::(1, 4)}
rel digit = {0.95::(2, 0); 0.01::(2, 1); 0.01::(2, 2); 0.01::(2, 3); 0.01::(2, 4)}

rel how_many(x) :- x = count(o: digit(o, 3) or digit(o, 4))
